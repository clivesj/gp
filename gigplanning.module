          $yes_link . $no_link . ($maybe_option ? $maybe_link : '') . '</div>';
        break;
    default:
        $ret1 = "default switch - case";
        break;
    }
  $output = $ret1 . $ret2 ."<div class='clear-both'></div>";
  }
  return $output;
}

